<div id="excel-export-options" style="display:none;">
  <h3 class="title"><%= l(:label_export_options, :export_format => 'EXCEL') %></h3>
  <%= form_tag(params.merge({:filename=>'issues.xls', :action=>'index_excel', :controller => 'issues'}), :method => :get, :id => 'excel-export-form') do %>
  <p>
    <label><%= check_box_tag 'description', '1', @query.has_column?(:description) %> <%= l(:field_description) %>   </label>
    <label><%= check_box_tag 'status_change', '1'  %> <%= l(:status_change_label) %>   </label>
  </p>
  <p class="buttons">
    <%= submit_tag l(:button_export), :name => nil, :onclick => "hideModal(this);" %>
    <%= submit_tag l(:button_cancel), :name => nil, :onclick => "hideModal(this);", :type => 'button' %>
  </p>
  <% end %>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $(".other-formats").append("<span><a href=\"\" class=\"csv\" rel=\"nofollow\"  onclick=\"showModal('excel-export-options', '330px'); return false;\" >EXCEL</a></span>");
});
</script>
